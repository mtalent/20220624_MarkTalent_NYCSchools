<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:background="@color/black"
    android:layout_marginVertical="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    android:padding="5dp"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/teal_200"
            android:lines="2"
            android:padding="2dp"
            android:layout_weight="3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_next_foreground" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/school_building"
            android:layout_gravity="end" />
        <TextView
            android:id="@+id/tv_school_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:textColor="@color/teal_200"
            android:paddingStart="15dp"
            android:lines="1"
            android:textSize="20sp"
            tools:text="School Location"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="130dp">
        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_phone_foreground"
            android:layout_gravity="end" />
        <TextView
            android:id="@+id/tv_school_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:textColor="@color/teal_200"
            android:gravity="start"
            android:lines="1"
            android:textSize="20sp"
            tools:text="School phone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>